{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "allowJs": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/schema.js",
    "src/generated/**/*.d.ts",
    "src/__tests__/**/*.test.ts",
    "src/test-utils.ts"
  ]
}
