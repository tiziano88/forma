{
  "name": "forma-structural-editor",
  "displayName": "Forma Structural Editor",
  "description": "View and edit Protobuf-encoded binary files with a schema using a Svelte-based webview.",
  "version": "0.0.5",
  "publisher": "tiziano88",
  "repository": {
    "type": "git",
    "url": "https://github.com/tiziano88/forma"
  },
  "homepage": "https://github.com/tiziano88/forma",
  "bugs": {
    "url": "https://github.com/tiziano88/forma/issues"
  },
  "license": "MIT",
  "keywords": [
    "protobuf",
    "binary",
    "editor",
    "structural",
    "forma"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onFileSystem:file",
    "onCommand:forma.openStructuralEditor",
    "onCommand:forma.openForActiveFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "forma.structuralEditor",
        "displayName": "Structural Editor",
        "selector": [
          {
            "filenamePattern": "*.bin"
          },
          {
            "filenamePattern": "*.binpb"
          },
          {
            "filenamePattern": "*.binarypb"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "forma.openStructuralEditor",
        "title": "Open Structural Editor"
      },
      {
        "command": "forma.openForActiveFile",
        "title": "Open Structural Editor for Active File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm -r build && pnpm run esbuild-base",
    "compile": "tsc -watch -p ./",
    "build": "pnpm generate-wkt && pnpm --filter vscode-extension-webview build && tsc -p ./ && pnpm run copy-schemas",
    "esbuild-base": "esbuild ./out/extension.js --bundle --outfile=out/extension.bundled.js --external:vscode --format=cjs --platform=node --target=node18 && mv out/extension.bundled.js out/extension.js",
    "generate-wkt": "node ./scripts/generate-wkt-desc.cjs",
    "copy-schemas": "mkdir -p media/schemas && cp ../config/forma.proto media/schemas/config.proto && cd media/schemas && protoc --descriptor_set_out=config.desc --include_imports config.proto",
    "package": "pnpm -r build && pnpm run esbuild-base && vsce package",
    "clean": "rm -rf out media"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.0",
    "esbuild": "^0.19.12",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@lintx/core": "workspace:*",
    "google-protobuf": "^3.21.2",
    "vscode-extension-webview": "workspace:*"
  }
}
